<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AuthorizationFinish"
    android:background="#FFFFFF"
    >
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#FFFFFF"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        >

        <TextView
            android:id="@+id/registrationText"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="С возвращением!"
            android:textAlignment="center"
            android:textSize="25dp"
            android:textStyle="normal"
            android:layout_margin="10dp"/>

        <TextView
            android:id="@+id/lifeStyleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Выберите свой образ жизни"
            android:textSize="20dp"
            android:textStyle="normal"
            android:layout_gravity="center"
            android:layout_margin="15dp"
            />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/notActiveLS"
            android:layout_width="280dp"
            android:layout_height="65dp"
            android:text="Сидячий образ жизни"
            android:layout_gravity="center"
            android:backgroundTint="#F8F8F4"
            app:cornerRadius="15dp"
            android:textSize="18dp"
            android:textColor="#727272"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="10dp"
            app:strokeColor="#E5E3E1"
            app:strokeWidth="2dp"
            />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/activeLS"
            android:layout_width="280dp"
            android:layout_height="65dp"
            android:text="Активный образ жизни"
            android:layout_gravity="center"
            android:backgroundTint="#F8F8F4"
            app:cornerRadius="15dp"
            android:textSize="18dp"
            android:textColor="#727272"
            android:layout_margin="20dp"
            app:strokeColor="#E5E3E1"
            app:strokeWidth="2dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/saveLifestyle"
            android:layout_width="200dp"
            android:layout_height="47dp"
            android:text="Готово"
            app:backgroundTint="#B1E996"
            android:layout_gravity="center"
            android:background="@drawable/button_corner"
            app:cornerRadius="15dp"
            android:textSize="18dp"
            android:layout_margin="20dp"/>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>